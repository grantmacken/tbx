#!/usr/bin/env -S nvim -l
-- set XDG_DATA_HOME for vim.pack
-- unset at scripts end
vim.uv.os_setenv("XDG_DATA_HOME", "/usr/local/share")
local items = {
 'bash'
}

vim.pack.add({
    {
    src = 'https://github.com/nvim-treesitter/nvim-treesitter',
    version = 'main'
    }})

local ok_ts, ts = pcall(require, 'nvim-treesitter')
if ok_ts then
  print( 'required treesitter' )
  ts.setup(
    {
      install_root_dir = '/usr/local/share/nvim/site',
    }
  )
end

for _, item in ipairs(items) do
vim.uv.sleep(1000) 
vim.cmd.MasonInstall(item)
vim.uv.sleep(1000) 
end

vim.uv.os_unsetenv("XDG_DATA_HOME")

